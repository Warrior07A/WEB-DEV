generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User{
    id                  Int    @id      @default(autoincrement())
    name                String
    email               String          @unique
    passwordHash        String  
    role                ROLEE   
    createdAt           DateTime         @default(now())
    Service  Service[]

}

enum ROLEE{
    USER
    SERVICE_PROVIDER
}

model Service{
    id                  Int    @id      @default(autoincrement())
    name                String
    type                SERVICE
    providerId          Int 
    durationMinutes     Int
    createdAt           DateTime            @default(now())
    user  User  @relation(fields: [providerId] , references: [id])
    Availability          Availability[]
}

enum SERVICE{
    MEDICAL
    HOUSE_HELP
    BEAUTY
    FITNESS
    EDUCATION
    OTHER
}

model Availability{
    id                  Int    @id      @default(autoincrement())
    serviceId           Int
    dayOfWeek           Int
    startTime           Int
    endTime             Int
    service Service     @relation(fields:  [serviceId] ,references: [id] )
}

